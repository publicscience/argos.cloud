{
    "AWSTemplateFormatVersion" : "2010-09-09",
    "Description": "Create an S3 bucket.",

    "Resources": {
        "S3Bucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "AccessControl": "PublicRead"
            },
            "DeletionPolicy": "Retain"
        }
    },

    "Outputs": {
        "BucketName": {
            "Description": "Name of the S3 bucket",
            "Value": { "Ref": "S3Bucket" }
        }
    }
}
